{
    "name": "Remove EdX Play Button",
    "version": "1.0",
    "description": "Removes the play button that overlays paused EdX videos so you can take screenshots.",
    "permissions": ["activeTab"],
    "content_scripts": [{
        "matches": ["*://courses.edx.org/courses/*"],
        "js": ["remove_element.js"]
    }],
    "icons": { "16": "images/icon16.png",
        "48": "images/icon48.png",
       "128": "images/icon128.png" },
    "manifest_version": 2
}